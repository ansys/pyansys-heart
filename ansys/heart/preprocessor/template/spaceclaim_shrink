# Python Script, API Version = V21

def run_shrink(infile, outfile, size):
    ClearAll()
    # Insert From File
    DocumentInsert.Execute(infile)
    # EndBlock

    # Shrinkwrap
    bodies = Selection.Create(GetRootPart().Components[0].Content.Meshes[0])
    options = ShrinkwrapOptions()
    options.MaxSize = MM(size)
    options.MinSize = MM(size)
    result = Shrinkwrap.Create(bodies, options)
    # EndBlock

    # Save File
    DocumentSave.Execute(outfile)
    # EndBlock


# input = r"D:\Heart20\mesh\03\bv.stl"
# output = r"D:\Heart20\mesh\03\bv_smooth.stl"
input = r"{{input}}"
output = r"{{output}}"
size = 1
run_shrink(input, output, size)
